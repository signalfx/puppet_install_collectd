LoadPlugin mysql
<Plugin mysql>
	<% @databases.each do |instance, config| -%>
    <Database <%= instance -%> >
      <% config.each do |key,value| -%>
	  <%= key -%> "<%= value -%>"
	  <% end -%>
    </Database>
    <% end -%>
</Plugin>
